<UserControl x:Class="SDxDeveloper.Client.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDxDeveloper.Client.Views"
             
             xmlns:vm="clr-namespace:SDxDeveloper.Client.ViewModels"
             
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <WrapPanel Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Grid.Row="0">
            <Button Content="Load" Command="{Binding LoadFromFileCommand}" />
            <Button Content="Export" />
            <Button Content="Create Instruction" />
        </WrapPanel>

        <ListView Grid.Row="1"
                  Grid.Column="0"
                  ItemsSource="{Binding LoadedObjects}"
                  SelectedItem="{Binding SelectedObject}">
            <ListView.Resources>
                <DataTemplate DataType="{x:Type vm:SDxObjectInstanceViewModel}">
                    <GroupBox Header="{Binding ClassName}">
                        <Grid>
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Details" />
                                </ContextMenu>
                            </Grid.ContextMenu>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="UID" />
                            <Label Grid.Row="0"
                               Grid.Column="1"
                               Content="{Binding UID}" />

                            <Label Grid.Row="1"
                               Grid.Column="0"
                               Content="Class" />
                            <Label Grid.Row="1"
                               Grid.Column="1"
                               Content="{Binding ClassName}" />

                            <Label Grid.Row="2"
                               Grid.Column="0"
                               Content="Name" />
                            <Label Grid.Row="2"
                               Grid.Column="1"
                               Content="{Binding Name}" />
                        </Grid>
                    </GroupBox>
                </DataTemplate>
            </ListView.Resources>
        </ListView>

        <ListView Grid.Row="1"
                 Grid.Column="1"
                 ItemsSource="{Binding SelectedObjectInterfaces}">
            <ListView.Resources>
                <DataTemplate DataType="{x:Type vm:SDxInterfaceInstanceViewModel}">
                    <GroupBox Header="{Binding Name}">
                        <ListView ItemsSource="{Binding Properties}">
                            <ListView.Resources>
                                <DataTemplate DataType="{x:Type vm:SDxPropertyInstanceViewModel}">
                                    <WrapPanel>
                                        <Label Content="{Binding Name}" />
                                        <TextBox Text="{Binding Value}" />
                                    </WrapPanel>
                                </DataTemplate>
                            </ListView.Resources>
                        </ListView>
                    </GroupBox>
                </DataTemplate>
            </ListView.Resources>
        </ListView>
    </Grid>
</UserControl>
