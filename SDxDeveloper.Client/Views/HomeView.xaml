<UserControl x:Class="SDxDeveloper.Client.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDxDeveloper.Client.Views"
             
             xmlns:vm="clr-namespace:SDxDeveloper.Client.ViewModels"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}">
    <StackPanel>
        <WrapPanel>
            <Button Content="Load" Command="{Binding LoadFromFileCommand}" />
            <Button Content="Export" />
        </WrapPanel>
        <DataGrid ItemsSource="{Binding LoadedObjects}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Class" />
                <DataGridTextColumn Header="UID" />
                <DataGridTextColumn Header="Name" />
                <DataGridTextColumn Header="Description" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
